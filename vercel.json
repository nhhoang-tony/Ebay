{
  "builds": [
    {
      "src": "auctions/wsgi.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb", "runtime": "python3" }
    },
    {
      "src": "build_files.sh",
      "use": "@vercel/static-build",
      "config": { "distDir": "staticfiles_build" }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "auctions/wsgi.py"
    },
    {
      "src": "auctions/static/(.*)",
      "dest": "auctions/static/$1"
    }
  ]
}
